  "mev_protection": {
    "description": "Protect against front-running, sandwich attacks, MEV bots",
    "threats": {
      "front_running": {
        "description": "Bot sees your pending tx, submits same tx with higher gas",
        "impact": "They get the trade, you get reverted tx (wasted gas)",
        "defense": [
          "Use private mempools (Flashbots Protect, Eden Network)",
          "Use MEV-resistant DEXes (CowSwap, 1inch Fusion)",
          "Slippage protection (limit max price movement)"
        ]
      },

      "sandwich_attack": {
        "description": "Bot front-runs your buy (pumps price) + back-runs (dumps), stealing profit",
        "impact": "You buy high, bot profits from your slippage",
        "defense": [
          "Private mempools (tx not visible to bots)",
          "Low slippage tolerance (0.1%-0.5%)",
          "Split large orders into smaller chunks",
          "Use limit orders instead of market orders"
        ]
      }
    },

